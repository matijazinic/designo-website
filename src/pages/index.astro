---
import ContactCTA from '../components/Global/ContactCTA';
import Design from '../components/Global/Design';
import Hero from '../components/Home/Hero';
import Workflow from '../components/Home/Workflow';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Designo - Creative Web Agency">
	<section class="bg-hero-pattern bg-cover bg-[#E7816B] bg-right lg:min-h-[640px] grid grid-cols-1 lg:grid-cols-2 sm:rounded-xl lg:mt-10 container mx-auto">
		<Hero />
	</section>
	<section class="flex flex-col gap-4 px-4 mt-20 md:mt-[10rem] lg:grid lg:grid-cols-2" id="projects">
		<Design isBig={true} title="Web Design" imageName="web-design-small" href="web-design"/>
		<Design isBig={false} title="App Design" imageName="app-design" href="app-design"/>
		<Design isBig={false} title="Graphic Design" imageName="graphic-design" href="graphic-design"/>
	</section>
	<section class="flex flex-col gap-20 px-8 md:px-4 mt-24 md:mt-[10rem] lg:grid lg:grid-cols-3">
		<Workflow />
	</section>
	<section class="px-4 sm:px-0 mt-24 md:mt-[10rem] relative z-10">
		<ContactCTA />
	</section>
</Layout>

