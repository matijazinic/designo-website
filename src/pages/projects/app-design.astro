---
import Hero from "../../components/Design/Hero";
import Projects from "../../components/Design/Projects";
import ContactCTA from "../../components/Global/ContactCTA";
import Design from "../../components/Global/Design";
import Layout from "../../layouts/Layout.astro";
import { appDesign } from "../../projects";
---

<Layout title="Designo - App Design Projects">
  <section class="lg:mt-10 px-4 lg:px-8">
    <Hero
      title="App Design"
      description="Our mobile designs bring intuitive digital solutions to your customers right at their fingertips."
    />
  </section>
  <section class="mt-10 md:mt-32 lg:mt-20 px-4 lg:px-8">
    <div class="lg:grid lg:grid-cols-3 gap-10 lg:gap-16 container mx-auto">
      <Projects data={appDesign} />
    </div>
  </section>
  <section class="mt-24 bg-white px-4 lg:px-8">
    <div
      class="flex flex-col gap-10 lg:grid lg:grid-cols-2 px-8 sm:px-0 container mx-auto"
    >
      <Design
        isBig={false}
        title="Web Design"
        imageName="web-design-small"
        href="web-design"
      />
      <Design
        isBig={false}
        title="Graphic Design"
        imageName="graphic-design"
        href="graphic-design"
      />
    </div>
  </section>
  <section class="mt-24 md:mt-32 relative z-10 px-4 md:px-8">
    <ContactCTA />
  </section>
</Layout>
